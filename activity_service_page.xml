<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".service_page">

    <TextView
        android:id="@+id/txthome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="404.SOLUTION"
        android:textColor="@color/black"
        android:textSize="34dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/topservice"
        android:layout_width="180dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="621dp"
        android:gravity="center"
        android:text="Top Services"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="70dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="3dp"
        android:layout_toEndOf="@+id/txthome"
        android:src="@drawable/baseline_close_24"/>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_below="@+id/txthome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="349dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/service2"
            android:layout_width="239dp"
            android:layout_height="45dp"
            android:text="Software repair services"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txthome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="463dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/service1"
            android:layout_width="239dp"
            android:layout_height="45dp"
            android:text="Hardware repair services"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_below="@+id/txthome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="349dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="232dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/service3"
            android:layout_width="239dp"
            android:layout_height="45dp"
            android:text="PC Setup / Installation"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout4"
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_below="@+id/txthome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="458dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="123dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/service4"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Motherboard Replacement"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/txthome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="572dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="1dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/service5"
            android:layout_width="239dp"
            android:layout_height="45dp"
            android:text="Anti-Virus Installation/Removal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>