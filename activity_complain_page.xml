<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".complain_page">

    <TextView
        android:id="@+id/txthome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="404.SOLUTION"
        android:textColor="@color/black"
        android:textSize="34dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/complainbox"
        android:layout_width="148dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Complain Box "
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txthome"
        app:layout_constraintVertical_bias="0.052" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="70dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txthome"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="750dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:background="@color/purple_200"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complainbox">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Device ID:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtdeviceid"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:hint="Enter Device Id " />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Date :"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvdate"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/datepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select the data" />

        <TextView
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:text="Device:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtdevice"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:hint="Enter your device name" />


        <TextView
            android:layout_width="368dp"
            android:layout_height="41dp"
            android:text="When did your problem start?:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtproblem"
            android:layout_width="368dp"
            android:layout_height="69dp"
            android:hint="problem .." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What were you doing when the problem occurred?:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtproc"
            android:layout_width="368dp"
            android:layout_height="69dp"
            android:hint="occer" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error Description :"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/txtdec"
            android:layout_width="368dp"
            android:layout_height="69dp"
            android:hint="->Please enter error description"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnsubmitcomplain"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="60dp"
            android:text="submit" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="if you want any chang??"
            android:textColor="@color/black"
            android:textAlignment="center" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>